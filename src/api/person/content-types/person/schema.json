{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "People",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "category": {
      "type": "enumeration",
      "enum": [
        "Director",
        "Research Team",
        "Associate Researchers",
        "PhD Students",
        "Former Researchers",
        "Postdoctoral researchers",
        "Visiting Academics",
        "Previous PhD Students"
      ],
      "required": true
    },
    "picture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "bio": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "office": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "areas": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::area.area"
    },
    "slug": {
      "type": "uid",
      "targetField": "last_name",
      "required": true,
      "maxLength": 50
    },
    "cv": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    }
  }
}
