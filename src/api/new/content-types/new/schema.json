      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "attached_files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "archive": {
      "type": "boolean",
      "default": false
    },
    "areas": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::area.area"
    }
